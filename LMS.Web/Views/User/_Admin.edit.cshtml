<div class="modal fade" id="UpdateUserModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Update admin</h4>
            </div>
            <div class="modal-body">
                <form name="editForm">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-md-3" for="UpdateFirstName">First Name</label>
                            <div class="col-md-9">
                                <input id="UpdateFirstName" data-ng-model="CurrentUser.FirstName" required class="form-control text-box single-line" type="text" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3" for="UpdateLastName">Last Name</label>
                            <div class="col-md-9">
                                <input id="UpdateLastName" data-ng-model="CurrentUser.LastName" required class="form-control text-box single-line" type="text" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-9">
                                <button data-ng-click="update()" type="button" class="btn btn-default btn-primary">Save</button>
                                <button data-ng-click="delete()" type="button" class="btn btn-default btn-danger">Delete</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
