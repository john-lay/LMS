@using LMS.Web.Infrastructure;
@{
    UserProfile profile = Session["UserInfo"] as UserProfile;
    if (profile == null)
    {
        profile = new UserProfile
        {
            ClientName = "LMS",
            FirstName = "Guest",
            LastName = "User"
        };
    }

    ViewBag.Title = "Welcome " + profile.FirstName + " " + profile.LastName + ",";

    if (Layout.Contains("_Layout.super.admin.cshtml"))
    {
        <p class="lead">
            super admin
        </p>
        <p class="lead">
            <ul>
                <li><a href="@Url.Action("Manage", "Client")">manage client</a></li>
                <li><a href="@Url.Action("ManageAdmin", "User")">manage admin</a></li>
                <li><a href="@Url.Action("Logo", "Client")">upload logo</a></li>
            </ul>
        </p>
    }
    if (Layout.Contains("_Layout.admin.cshtml"))
    {
        <p class="lead">
            admin
        </p>
    }
    if (Layout.Contains("_Layout.user.cshtml"))
    {
        <p class="lead">
            user
        </p>
    }
}
<p>Back to <a href="../sticky-footer">the default sticky footer</a> minus the navbar.</p>

